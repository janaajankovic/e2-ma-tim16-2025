<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.bosses.BossFightFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fight_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_boss_animation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            tools:lottie_rawRes="@raw/placeholder_animation" />

        <TextView
            android:id="@+id/text_boss_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toBottomOf="@id/lottie_boss_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Korgath, The Stone Sentinel" />

        <ProgressBar
            android:id="@+id/progress_bar_boss_hp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:progressTint="@color/action_color_cancel"
            android:scaleY="4"
            app:layout_constraintTop_toBottomOf="@id/text_boss_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:progress="80" />

        <TextView
            android:id="@+id/text_boss_hp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/progress_bar_boss_hp"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_boss_hp"
            app:layout_constraintStart_toStartOf="@id/progress_bar_boss_hp"
            app:layout_constraintEnd_toEndOf="@id/progress_bar_boss_hp"
            tools:text="160 / 200" />


        <ScrollView
            android:id="@+id/info_panel_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_bar_boss_hp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/user_stats_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/label_user_pp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YOUR POWER (PP)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <ProgressBar
                            android:id="@+id/progress_bar_user_pp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="8dp"
                            android:progressTint="#2196F3"
                            android:scaleY="2"
                            tools:max="100"
                            tools:progress="75" />

                        <TextView
                            android:id="@+id/text_user_pp_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="-11dp"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:text="75" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_attacks_remaining"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                app:drawableTopCompat="@drawable/ic_shield"
                                tools:text="5 / 5" />

                            <TextView
                                android:id="@+id/text_hit_chance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                app:drawableTopCompat="@drawable/ic_target"
                                tools:text="67%" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/equipment_rewards_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/label_active_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE EQUIPMENT"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:scrollbars="none">
                            <LinearLayout
                                android:id="@+id/active_equipment_container"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/label_potential_rewards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="POTENTIAL REWARDS"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/potential_rewards_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_coins"
                                    app:tint="?attr/colorControlNormal" />

                                <TextView
                                    android:id="@+id/text_potential_coins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                    android:textStyle="bold"
                                    tools:text="200" />

                                <LinearLayout
                                    android:id="@+id/potential_equipment_icons"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" />
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/button_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack!"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rewards_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text_rewards_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battle Over!"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lottie_treasure_chest"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_treasure_chest"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_fileName="treasure.json"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:layout_constraintTop_toBottomOf="@id/text_rewards_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/text_final_rewards_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toBottomOf="@id/lottie_treasure_chest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="You won 240 Coins!" />

        <ImageView
            android:id="@+id/image_reward_equipment"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:srcCompat="@drawable/ic_swords"
            app:layout_constraintTop_toBottomOf="@id/text_final_rewards_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/text_reward_equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/image_reward_equipment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Magic Sword"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
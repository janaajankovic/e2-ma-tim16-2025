<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.bosses.BossFightFragment"
    android:background="?android:attr/colorBackground">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_boss_animation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:lottie_rawRes="@raw/placeholder_animation" /> <TextView
    android:id="@+id/text_boss_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
    app:layout_constraintTop_toBottomOf="@id/lottie_boss_animation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="Grunt, The First Guardian" />

    <TextView
        android:id="@+id/label_boss_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOSS HP"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_boss_name"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_boss_hp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:progressTint="@color/action_color_cancel"
        android:scaleY="4"
        app:layout_constraintTop_toBottomOf="@id/label_boss_hp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:progress="80" />

    <TextView
        android:id="@+id/text_boss_hp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/progress_bar_boss_hp"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar_boss_hp"
        app:layout_constraintStart_toStartOf="@id/progress_bar_boss_hp"
        app:layout_constraintEnd_toEndOf="@id/progress_bar_boss_hp"
        tools:text="160 / 200" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_boss_hp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_user_pp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ic_swords"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="PP: 50" />

        <TextView
            android:id="@+id/text_attacks_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ic_shield"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="5 / 5" />

        <TextView
            android:id="@+id/text_hit_chance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ic_target"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="67%" />

    </LinearLayout>

    <Button
        android:id="@+id/button_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack!"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="lottie_treasure_chest, text_rewards_title"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/text_rewards_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle Over! Rewards:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lottie_treasure_chest"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_treasure_chest"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_fileName="treasure.json"  app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintTop_toBottomOf="@id/text_rewards_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" /> </androidx.constraintlayout.widget.ConstraintLayout>

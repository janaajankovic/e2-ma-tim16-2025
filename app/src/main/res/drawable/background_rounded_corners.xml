<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Боја позадине -->
    <solid android:color="#FFFFFF"/>  <!-- или друга боја -->

    <!-- Заобљени углови -->
    <corners android:radius="12dp"/>  <!-- мењај по потреби -->

    <!-- Ивице (опционо) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- боја оквира -->

    <!-- Унутрашње маргине (опционо) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
